<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dit.assignment3.Timer">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg3"
        android:scaleType="fitXY" />

    <!-- START BUTTON-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="START"
        android:textSize="26sp"
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- MiniMinute BUTTON-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="240dp"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:id="@+id/inputTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="200px"
                android:layout_height="20px"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hours"
                android:textAlignment="center"
                android:id="@+id/textView"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Minutes"
                android:textAlignment="center"
                android:id="@+id/textView2"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:inputType="number"
                android:textSize="40sp"
                android:ems="10"
                android:textAlignment="center"
                android:id="@+id/hoursInput"
                android:layout_column="2"
                android:text="00" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:inputType="number"
                android:textSize="40sp"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/minsInput"
                android:layout_column="3"
                android:text="00" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/startButton"
        android:layout_marginTop="370dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/numberTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4e668e">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="10"
                android:textSize="20sp"
                android:id="@+id/tenMin"
                android:layout_column="0"
                android:background="#bcc76b7b" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:text="20"
                android:id="@+id/twentyMin"
                android:layout_column="1"
                android:background="#bcc76b7b" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:text="30"
                android:id="@+id/thirtyMin"
                android:layout_column="2"
                android:background="#bcc76b7b" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:text="60"
                android:id="@+id/sixtyMin"
                android:layout_column="3"
                android:background="#bcc76b7b" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textAlignment="center"
        android:textSize="60sp"
        android:visibility="gone"
        android:id="@+id/timeleftdisp"
        android:layout_marginTop="300dp"
        android:layout_alignBottom="@+id/inputTable"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="CANCEL"
        android:visibility="gone"
        android:textSize="26sp"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 seconds (DEMO)"
        android:id="@+id/demobutton"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
