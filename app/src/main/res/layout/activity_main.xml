<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dit.assignment3.Timer">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg3"
        android:scaleType="fitXY" />
<!-- STOP BUTTON-->

    <!-- START BUTTON-->

    <Button
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:text="START"
        android:textSize="26sp"
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- MiniMinute BUTTON-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hours"
                android:textAlignment="center"
                android:id="@+id/textView"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Minutes"
                android:textAlignment="center"
                android:id="@+id/textView2"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:inputType="number"
                android:textSize="40sp"
                android:ems="10"
                android:textAlignment="center"
                android:id="@+id/hoursInput"
                android:layout_column="1"
                android:text="00" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:inputType="number"
                android:textSize="40sp"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/minsInput"
                android:layout_column="2"
                android:text="00" />
        </TableRow>

        <Space
            android:layout_width="20px"
            android:layout_height="300px" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:textSize="18sp"
                android:background="#3b000000"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/tenMin"
                android:layout_column="0" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:textSize="18sp"
                android:background="#3b000000"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/twentyMin"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:textSize="18sp"
                android:background="#3b000000"
                android:layout_height="wrap_content"
                android:text="30"
                android:id="@+id/thirtyMin"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:textSize="18sp"
                android:background="#3b000000"
                android:layout_height="wrap_content"
                android:text="60"
                android:id="@+id/sixtyMin"
                android:layout_column="3" />

        </TableRow>

    </TableLayout>




</RelativeLayout>
